{
  "name": "toggle-api",
  "author": "Tyler Jones <tyler@squirly.ca>",
  "version": "0.0.3",
  "description": "A client library for ToggleAPI.",
  "license": "MIT",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:toggle-api/javascript-client.git"
  },
  "bugs": {
    "url": "https://github.com/toggle-api/javascript-client/issues"
  },
  "homepage": "https://github.com/toggle-api/javascript-client",
  "scripts": {
    "postinstall": "typings install",
    "build": "npm run build:cjs && npm run build:global && npm run generate_packages",
    "build:cjs": "npm run clean:dist && npm run copy:src && npm run compile:dist",
    "build:global": "rm -rf ./dist/global && mkdir -p ./dist/global && node scripts/make-umd-bundle.js && npm run build:closure_core",
    "build:closure_core": "ccjs ./dist/global/toggle-api.umd.js --language_in=ECMASCRIPT5 --create_source_map=./dist/global/toggle-api.umd.min.js.map > ./dist/global/toggle-api.umd.min.js",
    "build:spec": "tsc --project spec --pretty",
    "build:spec:watch": "tsc --project spec --pretty --watch",
    "clean:spec": "rm -rf spec-js && rm -rf spec/src",
    "clean:dist": "rm -rf ./dist/cjs",
    "copy:src": "mkdir -p ./dist/cjs/src && cp -r ./src/* ./dist/cjs/src",
    "compile:dist": "tsc typings/index.d.ts dist/cjs/src/index.ts -m commonjs --sourceMap --outDir ./dist/cjs --target ES5 -d --diagnostics --pretty",
    "generate_packages": "node scripts/make-packages.js",
    "lint:spec": "tslint -c tslint.json spec/*.ts spec/**/*.ts spec/**/**/*.ts",
    "lint:src": "tslint -c tslint.json src/*.ts src/**/*.ts src/**/**/*.ts",
    "lint": "npm run lint:src && npm run lint:spec",
    "prepublish": "rm -rf ./typings && typings install && npm run build",
    "test": "npm run clean:spec && npm run build:spec && npm run test:mocha && npm run clean:spec",
    "test:watch": "npm run clean:spec && npm run build:spec && concurrently -kr 'npm run build:spec:watch' 'npm run test:mocha:watch'",
    "test:mocha": "mocha --opts mocha.opts spec-js",
    "test:mocha:watch": "mocha --opts mocha.opts spec-js --watch"
  },
  "dependencies": {
    "crypto-js": "^3.1.6",
    "semver": "^5.3.0"
  },
  "devDependencies": {
    "browserify": "^13.1.0",
    "chai": "^3.5.0",
    "closurecompiler": "^1.6.0",
    "concurrently": "^2.2.0",
    "mocha": "^3.0.0",
    "sinon": "^1.17.5",
    "sinon-chai": "^2.8.0",
    "source-map-support": "^0.4.2",
    "tslint": "^3.14.0",
    "typescript": "^1.8.10",
    "typings": "^1.3.2"
  },
  "typings": "./dist/cjs/index.d.ts"
}
